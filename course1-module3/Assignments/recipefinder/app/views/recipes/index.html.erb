<h1>The Search Term is: <%= @search_term %></h1>

<% if @recipes.nil? %>
  <p>Sorry, but your search did not return any relavent results...</p>
<% else %>

  <table border="1">
    <tr>
      <th>Thumbnail</th>
      <th>Title</th>
      <th>Rank</th>
    </tr>
    <% @recipes.each do |recipe| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to(image_tag(recipe["image_url"], height: '100', width: '100'), recipe["source_url"])%></td>
        <td><%= link_to(sanitize(recipe["title"]), recipe["source_url"]) %></td>
        <td><%= recipe["social_rank"] %></td>
      </tr>
    <% end %>
  </table>

<% end %>
